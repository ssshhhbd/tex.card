{
    "manifest_version": 2,
    "name": "Технические карты товаров",
    "description": "Приложение для создания технических карт товаров с автоматическим списанием материалов при переходе на выбранный этап в CRM",
    "version": "1.0.0",
    "author": "SHMOT CRM",
    "default_locale": "ru",
    
    "permissions": {
        "crm": ["read", "write"],
        "catalog": ["read", "write"],
        "user": ["read"]
    },
    
    "placement": {
        "CRM_DEAL_LIST_MENU": {
            "handler": "index.html",
            "title": "Технические карты"
        },
        "CRM_DEAL_DETAIL_TAB": {
            "handler": "index.html",
            "title": "Техкарты"
        },
        "APPLICATION": {
            "handler": "index.html",
            "title": "Технические карты товаров"
        }
    },
    
    "events": {
        "onCrmDealUpdate": {
            "handler": "webhook.php",
            "auth_type": "application"
        }
    },
    
    "options": {
        "color": "#4CAF50",
        "width": 1200,
        "height": 800
    }
}